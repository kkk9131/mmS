# Mamapace本番環境設定テンプレート
# このファイルを.env.productionにコピーして使用してください
# ⚠️ 実際の値を入力したファイルはGitにコミットしないでください！

# Supabase設定
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key

# 環境設定
EXPO_PUBLIC_ENVIRONMENT=production
NODE_ENV=production

# アプリ設定
EXPO_PUBLIC_APP_NAME=Mamapace
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_API_VERSION=v1

# 機能フラグ
EXPO_PUBLIC_USE_MOCK_DATA=false
EXPO_PUBLIC_ENABLE_REALTIME=true
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_IMAGE_UPLOAD=true
EXPO_PUBLIC_ENABLE_ANALYTICS=true

# セキュリティ設定
EXPO_PUBLIC_ENABLE_DEBUG_LOGS=false
EXPO_PUBLIC_ENABLE_ERROR_REPORTING=true
EXPO_PUBLIC_MAX_LOGIN_ATTEMPTS=5
EXPO_PUBLIC_SESSION_TIMEOUT=86400000 # 24時間（ミリ秒）

# 画像アップロード設定
EXPO_PUBLIC_MAX_IMAGE_SIZE=10485760 # 10MB
EXPO_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png,image/webp
EXPO_PUBLIC_IMAGE_QUALITY=0.8

# パフォーマンス設定
EXPO_PUBLIC_API_TIMEOUT=30000 # 30秒
EXPO_PUBLIC_CACHE_DURATION=300000 # 5分
EXPO_PUBLIC_BATCH_SIZE=20

# プッシュ通知設定
EXPO_PUBLIC_FCM_SENDER_ID=your-fcm-sender-id
EXPO_PUBLIC_EXPO_PROJECT_ID=your-expo-project-id

# 分析・監視
EXPO_PUBLIC_SENTRY_DSN=your-sentry-dsn
EXPO_PUBLIC_GA_TRACKING_ID=your-ga-tracking-id

# サポート情報
EXPO_PUBLIC_SUPPORT_EMAIL=support@mamapace.app
EXPO_PUBLIC_PRIVACY_POLICY_URL=https://mamapace.app/privacy
EXPO_PUBLIC_TERMS_OF_SERVICE_URL=https://mamapace.app/terms